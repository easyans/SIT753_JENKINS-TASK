// SIT753 - Part 1 Task 1 - Theoretical Jenkins Pipeline
// Author: Aakash Kumar Raj
pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo "Task: Compile and package the code."
                echo "Tool: Maven (Build Automation Tool)."
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo "Task: Run unit tests and integration tests to validate code and component interactions."
                echo "Tools: JUnit (Unit Testing), Selenium (Integration Testing)."
            }
        }
        stage('Code Analysis') {
            steps {
                echo "Task: Analyse the code quality and enforce coding standards."
                echo "Tool: SonarQube (Static Code Analysis)."
            }
        }
        stage('Security Scan') {
            steps {
                echo "Task: Perform a security scan to detect vulnerabilities in dependencies and code."
                echo "Tool: OWASP Dependency-Check or Snyk."
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo "Task: Deploy the application to a staging server."
                echo "Tool: AWS EC2 instance (deployment target)."
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo "Task: Run integration tests in the staging environment to validate production-like behavior."
                echo "Tools: Postman (API Testing), Selenium (UI Testing)."
            }
        }
        stage('Deploy to Production') {
            steps {
                echo "Task: Deploy the application to the production environment successfully."
                echo "Tool: AWS EC2 instance (production server)."
            }
        }
        stage('Completed') {
            steps {
                echo "Pipeline completed successfully."
            }
        }
    }
}
